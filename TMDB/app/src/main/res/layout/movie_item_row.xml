<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/movie_icon"
        android:layout_width="80dp"
        android:layout_height="80dp"/>

    <TextView
        android:id="@+id/movie_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="show_name"
        android:textSize="23sp"
        android:layout_toEndOf="@+id/movie_icon"
        android:textColor="#000000"/>

    <ImageView
        android:id="@+id/like_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_launcher_background"
        android:maxWidth="20dp"
        android:maxHeight="20dp"
        android:adjustViewBounds="true"/>

    <TextView
        android:id="@+id/movie_popularity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/movie_name"
        android:text="movie_popularity"
        android:textSize="20sp"
        android:layout_toEndOf="@+id/movie_icon"/>

    <TextView
        android:id="@+id/movie_vote_average"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/movie_popularity"
        android:text="vote_average"
        android:textSize="20sp"
        android:layout_toEndOf="@+id/movie_icon"/>

    <TextView
        android:id="@+id/release_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/movie_vote_average"
        android:text="release_date"
        android:textSize="20sp"
        android:layout_toEndOf="@+id/movie_icon"/>
</RelativeLayout>